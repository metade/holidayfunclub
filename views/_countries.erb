<div id="countries">
  <table>
    <thead>
      <tr>
        <th>Country</th>
        <th>Score</th>
        <th>Belgiums</th>
      </tr>
    </thead>
    <% @countries.each do |country| %>
    <tr>
      <td><a href="/countries/<%= country.slug %>"><%= country.name %></a></td>
      <td><%= sprintf '%.3f', (country.normalised[@category] || 0) %></td>
      <td><%= sprintf '%.3f', (country.belgiums[@category] || 0) %></td>
    </tr>
    <% end %>
  </table>
</div>
<script type="text/javascript" src="/javascripts/jquery.tablesorter.min.js"></script> 
<script type="text/javascript">
$(document).ready(function() { 
  $("#countries table").tablesorter(); 
});
</script>
