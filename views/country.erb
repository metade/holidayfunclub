<div id="panel">
  <div class="siteTitle"><a href="/">The Christopher Hitchens Holiday Fun Club</a></div>
  
  <h1>
    <%= @country.name %>
  </h1>
  
  <p>
    <%= @country.wikipedia.abstract %> <br/>
    <a href="<%= @country.wikipedia.url %>">Read more on Wikipedia</a>
  </p>
  
  
  <div id="tagcloud">
    <%= tag_cloud(@country.wordle_summary) %>
  </div>
</div>

<% if @country.belgiums.any? %>
<div id="belgiums">
  <a href="/by/belgiums">
    <span class="score" style="width: <%= $belgiums_max*16 %>px;">
      <span class="bar" style="width: <%= (@country.belgiums['__average__'] / $belgiums_max)*100 %>%;">&nbsp;</span><br/>
    </span><br/>
    <%= sprintf "%.1f", @country.belgiums['__average__'] %> belgiums
  </a>
</div>
<% end %>

<div id="amazon">
  <script type="text/javascript"><!--
  amazon_ad_tag = "holfunclu-20"; amazon_ad_width = "300"; amazon_ad_height = "250"; amazon_ad_link_target = "new";//--></script>
  <script type="text/javascript" src="http://www.assoc-amazon.com/s/ads.js"></script>
</div>

<%= erb :poster_image, :locals => { :poster_image => @country.poster_image } %>
